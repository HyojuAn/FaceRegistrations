<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tool:context=".FinishActivity">

    <ImageView
        android:id="@+id/finish_check"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="250dp"
        app:srcCompat="@drawable/finish_check" />

    <ImageView
        android:id="@+id/finish_info"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/finish_check"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/finish_info" />

    <Button
        android:id="@+id/finish_ok"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@id/finish_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/radius"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />
</RelativeLayout>